#include <iostream>
using namespace std;

float bubbleSort(float numbers[],int n) {
	for (int i = 0; i <n-1; i++) {
		for (int j = 0; j <n-i-1; j++) {
			if (numbers[j] > numbers [j+1]) {
				swap(numbers[j], numbers[j+1]);
			}
		}
	}
	float sum = 0;
	for (int i = 0; i < n; i++) {
	    sum +=numbers[i];
	}
	return sum / n;
}
int main() {
	float numbers[4];

	cout << "Podaj cztery liczby: ";
	for (int i = 0; i < 4; i++) {
		cin >> numbers[i];
	}

	float avg = bubbleSort(numbers, 4);

	cout << "Åšrednia posortowanych liczn: " << avg << endl;
	return 0;
}